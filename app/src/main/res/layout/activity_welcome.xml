<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A5D6A7"
    android:padding="24dp"
    tools:context=".WelcomeActivity">

    <!-- Content container in the middle -->
    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Trash bin icon -->
        <ImageView
            android:id="@+id/iv_trash_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_trash_can" />

        <!-- Welcome text -->
        <TextView
            android:id="@+id/tv_welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="@string/welcome_to_g_track"
            android:textColor="@color/onBackgroundColor"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Login as Resident Button -->
        <Button
            android:id="@+id/btn_login_resident"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_style_white"
            android:text="@string/log_in_as_resident"
            android:textColor="@color/onBackgroundColor"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Login as Collector Button -->
        <Button
            android:id="@+id/btn_login_collector"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style_white"
            android:text="@string/log_in_as_collector"
            android:textColor="@color/onBackgroundColor"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
