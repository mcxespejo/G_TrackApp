<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A5D6A7"
    android:fitsSystemWindows="true">

    <!-- ðŸ”¹ Top Bar -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#E1F7D5"
        android:padding="8dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_menu"
            android:layout_alignParentEnd="true"
            android:contentDescription="Menu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <!-- ðŸ”¹ Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:layout_above="@id/bottom_nav_bar"
        android:paddingTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Display User Info -->
            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username: "
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Name: "
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address: "
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number: "
                android:layout_marginBottom="8dp"/>

            <!-- Editable Fields (hidden by default) -->
            <EditText
                android:id="@+id/etFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/etLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/etRegion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Region"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/etCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/etBarangay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Barangay"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/etStreet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Street / House / Number"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="New Password"
                android:visibility="gone"
                android:inputType="textPassword"/>

            <Button
                android:id="@+id/btnSaveSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Changes"
                android:visibility="gone"
                android:layout_marginTop="16dp" />

            <!-- Edit Button -->
            <Button
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_marginTop="12dp" />

            <!-- Verification Section -->
            <TextView
                android:id="@+id/tvVerificationStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status: Not Verified"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="6dp"
                android:textColor="#D32F2F"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvUploadLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verify Account by Uploading Valid ID"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:padding="4dp" />

            <Button
                android:id="@+id/btnUploadId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload ID"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvUploadedFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No file uploaded"
                android:textSize="14sp"
                android:padding="6dp"
                android:layout_marginTop="6dp"
                android:textColor="@android:color/darker_gray" />

            <Button
                android:id="@+id/btnSubmitId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit for Verification"
                android:layout_marginTop="12dp"
                android:visibility="gone" />

            <!-- ðŸ”¹ Preview Image -->
            <ImageView
                android:id="@+id/imgUploadedId"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_marginTop="12dp"
                android:scaleType="centerCrop"
                android:contentDescription="Uploaded ID preview"
                android:visibility="gone" />

            <!-- Upload ProgressBar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:visibility="gone"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:indeterminate="false"
                android:max="100"/>
        </LinearLayout>
    </ScrollView>

    <!-- ðŸ”¹ Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#E1F7D5"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            android:padding="12dp" />

        <ImageView
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:contentDescription="Home"
            android:padding="12dp" />

        <ImageView
            android:id="@+id/btnAlarm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_alarm"
            android:contentDescription="Alarm"
            android:padding="12dp" />
    </LinearLayout>
</RelativeLayout>
