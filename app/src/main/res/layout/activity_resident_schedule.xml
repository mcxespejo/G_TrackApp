<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A5D6A7"
    android:fitsSystemWindows="true">

    <!-- Top Bar -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#E1F7D5"
        android:padding="8dp"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weekly Schedule"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_menu"
            android:layout_alignParentEnd="true"
            android:contentDescription="Menu" />
    </RelativeLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:layout_above="@id/bottom_nav_bar"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="32dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Locate Now -->
            <Button
                android:id="@+id/btnLocateNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Locate Now"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp" />

            <!-- Current Location -->
            <TextView
                android:id="@+id/tvCurrentLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Location: Not detected"
                android:textSize="16sp"
                android:padding="8dp"
                android:layout_marginBottom="20dp"
                android:background="#E0E0E0" />

            <!-- Weekly Schedule (Mondayâ€“Sunday) -->
            <TextView
                android:id="@+id/tvMonday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monday: -"
                android:padding="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvTuesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tuesday: -"
                android:padding="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvWednesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wednesday: -"
                android:padding="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvThursday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thursday: -"
                android:padding="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvFriday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Friday: -"
                android:padding="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvSaturday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saturday: -"
                android:padding="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvSunday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sunday: -"
                android:padding="8dp"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#E1F7D5"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            android:padding="12dp" />

        <!-- Home Button -->
        <ImageView
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:contentDescription="Home"
            android:padding="12dp" />

        <!-- Alarm Button -->
        <ImageView
            android:id="@+id/btnAlarm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_alarm"
            android:contentDescription="Alarm"
            android:padding="12dp" />
    </LinearLayout>

</RelativeLayout>
