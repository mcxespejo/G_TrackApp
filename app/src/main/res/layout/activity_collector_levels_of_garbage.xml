<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A5D6A7"
    android:fitsSystemWindows="true">

    <!-- Top Navigation Bar -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#E1F7D5"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_alignParentTop="true">

        <!-- Centered Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Levels of Garbage"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerInParent="true" />

        <!-- Right Menu Icon -->
        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu"
            android:contentDescription="Menu Icon"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:layout_above="@id/bottom_nav_bar"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Selected Address TextView -->
            <TextView
                android:id="@+id/tvSelectedAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selected Address will appear here"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
                android:background="#FFFFFF"/>

            <!-- Garbage Level Buttons (click to select address) -->
            <Button
                android:id="@+id/btnLow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Low Garbage"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btnMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Medium Garbage"
                android:backgroundTint="#FFEB3B"
                android:textColor="@android:color/black"/>

            <Button
                android:id="@+id/btnHigh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="High Garbage"
                android:backgroundTint="#F44336"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btnExtreme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Extreme Garbage"
                android:backgroundTint="#B71C1C"
                android:textColor="@android:color/white"/>

            <!-- Confirm Button -->
            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Selection"
                android:backgroundTint="#2196F3"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#E1F7D5"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            android:padding="12dp"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:contentDescription="Home"
            android:padding="12dp"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/btnAlarm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_alarm"
            android:contentDescription="Alarm"
            android:padding="12dp"
            android:scaleType="centerInside" />
    </LinearLayout>

</RelativeLayout>
