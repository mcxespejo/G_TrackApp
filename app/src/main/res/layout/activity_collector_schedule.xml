<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A5D6A7"
    android:fitsSystemWindows="true">

    <!-- Top Bar -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#E1F7D5"
        android:padding="8dp"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Collector Schedule"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_menu"
            android:layout_alignParentEnd="true"
            android:contentDescription="Menu" />
    </RelativeLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:layout_above="@id/bottom_nav_bar"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="24dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Weekly Schedules -->
            <TextView
                android:id="@+id/tvScheduleMon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monday: "
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tvScheduleTue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tuesday: "
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tvScheduleWed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wednesday: "
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tvScheduleThu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thursday: "
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tvScheduleFri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Friday: "
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tvScheduleSat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saturday: "
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tvScheduleSun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sunday: "
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:padding="8dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#E1F7D5"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            android:padding="12dp" />

        <!-- Home Button -->
        <ImageView
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:contentDescription="Home"
            android:padding="12dp" />

        <!-- Alarm Button -->
        <ImageView
            android:id="@+id/btnAlarm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_alarm"
            android:contentDescription="Alarm"
            android:padding="12dp" />
    </LinearLayout>

</RelativeLayout>
