<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.g_trackapp">

    <!-- ðŸ”¹ Core Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Required for location updates in the background (Android 10+) -->
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <!-- For showing notifications -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- ðŸ”¹ Foreground Service Permissions (Android 14+) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />

    <!-- For running alarms and scheduled jobs -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <!-- Restart on boot to resume tracking -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- (Optional but recommended on Android 14+) -->
    <!-- For consistent background work if your app ever uses data sync -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GTrackResidentApp"
        android:usesCleartextTraffic="true">

        <!-- ðŸ”¹ Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <!-- ðŸ”¹ Main Launcher Activity -->
        <activity
            android:name=".WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ðŸ”¹ Firebase Cloud Messaging Service -->
        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- ðŸ”¹ Boot Receiver (Restart services after reboot) -->
        <receiver
            android:name=".BootReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- ðŸ”¹ Alarm Receiver (for scheduled notifications) -->
        <receiver
            android:name=".AlarmReceiver"
            android:exported="false" />

        <!-- ðŸ”¹ Foreground Location Tracking Service -->
        <service
            android:name=".CollectorLocationService"
            android:exported="false"
            android:foregroundServiceType="location" />

        <!-- ðŸ”¹ Activities -->
        <activity android:name=".ResidentLoginActivity" />
        <activity android:name=".ResidentRegisterActivity" />
        <activity android:name=".ResidentLandingPageActivity" />
        <activity android:name=".ResidentMainMenuActivity" />
        <activity android:name=".ResidentLocateNowActivity" />
        <activity android:name=".ResidentScheduleActivity" />
        <activity android:name=".ResidentFeedbackActivity" />
        <activity android:name=".ResidentAccountSettingActivity" />

        <activity android:name=".CollectorLoginActivity" />
        <activity android:name=".CollectorLandingPageActivity" />
        <activity android:name=".CollectorMainMenuActivity" />
        <activity android:name=".CollectorLevelsOfGarbageActivity" />
        <activity android:name=".CollectorRouteSuggestionActivity" />
        <activity android:name=".CollectorFeedbackActivity" />
        <activity android:name=".CollectorAccountSettingActivity" />
        <activity android:name=".CollectorScheduleActivity" />

        <!-- ðŸ”¹ Image Viewer (Fullscreen) -->
        <activity
            android:name=".FullScreenImageActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <!-- ðŸ”¹ Popup Notification Activity -->
        <activity
            android:name=".ResidentNotificationListActivity"
            android:theme="@style/PopupNotificationTheme"
            android:launchMode="singleTop"
            android:excludeFromRecents="true" />

        <activity android:name=".OtpVerificationActivity" />

    </application>

</manifest>
